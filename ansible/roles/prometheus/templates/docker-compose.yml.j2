version: "3"
services:
  prometheus:
    image: prom/prometheus:v2.43.0
    container_name: prometheus
    ports:
      - "9090:9090"
    volumes:
      - ./prometheus.yml:/etc/prometheus/prometheus.yml
      - ./node-rules.yml:/etc/prometheus/node-rules.yml
    command:
      - "--config.file=/etc/prometheus/prometheus.yml"
      - "--log.level=debug"
